# Discord Bot Token
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Backend URL
BACKEND_URL=http://localhost:8000

# Bot ID (用于多Bot区分，每个Bot实例使用不同ID)
BOT_ID=default

# LLM Configuration (通用配置，可在Web后台修改)
LLM_BASE_URL=https://api.openai.com/v1
LLM_API_KEY=your_api_key_here
LLM_MODEL=gpt-4o-mini

# Context Settings (Bot独立配置，可在Web后台修改)
CONTEXT_LIMIT=10

# Database
DATABASE_URL=sqlite+aiosqlite:///./catiebot.db

# Admin Password (for web admin)
ADMIN_PASSWORD=change_this_to_a_secure_secret
